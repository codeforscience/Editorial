<div id="sidebar">
    <div class="inner">

        {{!-- Nav - partials/navigation.hbs --}}
        {{#if @site.navigation}}
            {{navigation}}
        {{/if}}

        {{!-- Recent posts --}}
        <section>
            <header class="major">
                <h2>Latest Updates</h2>
            </header>
            <div class="mini-posts">
                {{!-- We're just grabbing the 3 latest posts here but you can change
                this to filter for a specific tag or order depending on what you want.
                More info: https://docs.ghost.org/api/handlebars-themes/helpers/get/ --}}
                {{#get "posts" limit="5" filter="tag:weekly-update" as |mini_post|}}
                    {{#foreach mini_post}}
                    <article>
                        <h3><a href="{{url}}">{{title}}</a></h3>
                        <p>{{excerpt words="25"}}...</p>
                    </article>
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Contact --}}
        {{#get "posts" slug="contact"as |contact|}}
            {{#if contact}}{{#foreach contact}}
                <section>
                    <header class="major">
                        <h2>{{title}}</h2>
                    </header>
                    {{content}}
                </section>
            {{/foreach}}{{/if}}
        {{/get}}

        {{!-- Footer --}}
        <footer id="footer">
            <p class="">Code for Science & Society<br/>{{@site.title}}
            </p>
        </footer>

    </div>
</div>
